<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Sunset gradient background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_auth_sunset" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="32dp"
            android:paddingTop="48dp"
            android:paddingBottom="32dp">

            <!-- Logo -->
            <ImageView
                android:id="@+id/image_logo"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_solar_sun"
                android:contentDescription="@string/app_brand_name"
                app:tint="@color/auth_text_dark" />

            <!-- Brand name -->
            <TextView
                android:id="@+id/text_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/app_brand_name"
                android:textColor="@color/auth_text_dark"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Title -->
            <TextView
                android:id="@+id/title_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/register_title"
                android:textColor="@color/auth_text_white"
                android:textSize="16sp" />

            <!-- Profile photo picker -->
            <FrameLayout
                android:id="@+id/container_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/image_avatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_avatar_circle"
                    android:contentDescription="@string/label_tap_add_photo"
                    android:padding="24dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_camera"
                    app:tint="@color/auth_text_white" />

                <!-- Small camera badge -->
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/bg_auth_button"
                    android:contentDescription="@string/label_tap_add_photo"
                    android:padding="5dp"
                    android:src="@drawable/ic_camera"
                    app:tint="@color/auth_text_dark" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/label_tap_add_photo"
                android:textColor="@color/auth_input_hint"
                android:textSize="12sp" />

            <!-- Display Name label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="6dp"
                android:text="@string/hint_display_name"
                android:textColor="@color/auth_text_white"
                android:textSize="14sp" />

            <!-- Display Name input -->
            <EditText
                android:id="@+id/edit_display_name"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/bg_auth_input"
                android:hint="@string/hint_display_name"
                android:inputType="textPersonName"
                android:paddingHorizontal="16dp"
                android:textColor="@color/auth_text_white"
                android:textColorHint="@color/auth_input_hint"
                android:textSize="15sp" />

            <!-- Email label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="6dp"
                android:text="@string/hint_email"
                android:textColor="@color/auth_text_white"
                android:textSize="14sp" />

            <!-- Email input -->
            <EditText
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/bg_auth_input"
                android:hint="Email@email.com"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="16dp"
                android:textColor="@color/auth_text_white"
                android:textColorHint="@color/auth_input_hint"
                android:textSize="15sp" />

            <!-- Password label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="6dp"
                android:text="@string/hint_password"
                android:textColor="@color/auth_text_white"
                android:textSize="14sp" />

            <!-- Password input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/auth_input_hint"
                app:hintEnabled="false"
                app:boxBackgroundMode="none">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/bg_auth_input"
                    android:hint="@string/hint_password"
                    android:inputType="textPassword"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/auth_text_white"
                    android:textColorHint="@color/auth_input_hint"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Register button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_register"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_auth_button"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/action_register"
                android:textColor="@color/auth_text_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@null" />

            <!-- Back to login link -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_login"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/label_already_have_account"
                android:textColor="@color/auth_link_text"
                android:textSize="14sp" />

            <!-- Progress -->
            <ProgressBar
                android:id="@+id/progress_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:indeterminateTint="@color/auth_text_white"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
