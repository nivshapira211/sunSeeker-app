<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Sunset gradient background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_auth_sunset" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="32dp"
            android:paddingTop="80dp"
            android:paddingBottom="40dp">

            <!-- Logo -->
            <ImageView
                android:id="@+id/image_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_solar_sun"
                android:contentDescription="@string/app_brand_name"
                app:tint="@color/auth_text_dark" />

            <!-- Brand name -->
            <TextView
                android:id="@+id/text_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/app_brand_name"
                android:textColor="@color/auth_text_dark"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Email label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="@string/hint_email"
                android:textColor="@color/auth_text_white"
                android:textSize="14sp" />

            <!-- Email input -->
            <EditText
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/bg_auth_input"
                android:hint="Email@email.com"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="16dp"
                android:textColor="@color/auth_text_white"
                android:textColorHint="@color/auth_input_hint"
                android:textSize="15sp" />

            <!-- Password label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="6dp"
                android:text="@string/hint_password"
                android:textColor="@color/auth_text_white"
                android:textSize="14sp" />

            <!-- Password input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/auth_input_hint"
                app:hintEnabled="false"
                app:boxBackgroundMode="none">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/bg_auth_input"
                    android:hint="@string/hint_password"
                    android:inputType="textPassword"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/auth_text_white"
                    android:textColorHint="@color/auth_input_hint"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Forgot password -->
            <TextView
                android:id="@+id/text_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:text="@string/label_forgot_password"
                android:textColor="@color/auth_link_text"
                android:textSize="13sp" />

            <!-- Login button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_login"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/bg_auth_button"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/action_login"
                android:textColor="@color/auth_text_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@null" />

            <!-- Register link -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_register"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/action_create_account"
                android:textColor="@color/auth_link_text"
                android:textSize="14sp" />

            <!-- Progress -->
            <ProgressBar
                android:id="@+id/progress_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:indeterminateTint="@color/auth_text_white"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
