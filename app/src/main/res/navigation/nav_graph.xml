<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.sunseeker_app.ui.view.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_feedFragment"
            app:destination="@id/feedFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.sunseeker_app.ui.view.RegisterFragment"
        android:label="Register">
        <action
            android:id="@+id/action_registerFragment_to_feedFragment"
            app:destination="@id/feedFragment" />
    </fragment>

    <fragment
        android:id="@+id/feedFragment"
        android:name="com.example.sunseeker_app.ui.view.FeedFragment"
        android:label="Feed">
        <action
            android:id="@+id/action_feedFragment_to_eventDetailsFragment"
            app:destination="@id/eventDetailsFragment" />
        <action
            android:id="@+id/action_feedFragment_to_createEventFragment"
            app:destination="@id/createEventFragment" />
    </fragment>

    <fragment
        android:id="@+id/eventDetailsFragment"
        android:name="com.example.sunseeker_app.ui.view.EventDetailsFragment"
        android:label="Event Details">
        <argument
            android:name="eventId"
            app:argType="string" />
        <action
            android:id="@+id/action_eventDetailsFragment_to_createEventFragment"
            app:destination="@id/createEventFragment" />
    </fragment>

    <fragment
        android:id="@+id/createEventFragment"
        android:name="com.example.sunseeker_app.ui.view.CreateEventFragment"
        android:label="Create Event">
        <argument
            android:name="eventId"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_createEventFragment_to_mapPickerFragment"
            app:destination="@id/mapPickerFragment" />
    </fragment>

    <fragment
        android:id="@+id/mapPickerFragment"
        android:name="com.example.sunseeker_app.ui.view.MapPickerFragment"
        android:label="Pick Location" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.sunseeker_app.ui.view.ProfileFragment"
        android:label="Profile">
        <action
            android:id="@+id/action_profileFragment_to_eventDetailsFragment"
            app:destination="@id/eventDetailsFragment" />
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>
